<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp">

    <ImageView
        android:id="@+id/medIView"
        android:layout_width="156dp"
        android:layout_height="219dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medTView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/meditation_item_title_style"
        app:layout_constraintStart_toStartOf="@id/medIView"
        app:layout_constraintTop_toBottomOf="@id/medIView"
        tools:text="meditation" />

    <TextView
        android:id="@+id/medSubTView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:textAppearance="@style/meditation_item_subtitle_style"
        app:layout_constraintStart_toStartOf="@id/medTView"
        app:layout_constraintTop_toBottomOf="@id/medTView"
        tools:text="meditation" />

</androidx.constraintlayout.widget.ConstraintLayout>